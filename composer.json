{
    "name": "glicer/lazyload-img",
    "type": "library",
    "description": "lazy loading images",
    "keywords": ["lazyload", "image", "progressive"],
    "homepage": "https://github.com/emmanuelroecker/php-lazyload-img",
    "license": "MIT",
    "authors": [
        {
            "name": "Emmanuel ROECKER",
            "homepage": "http://dev.glicer.com"
        },
        {
            "name": "Rym BOUCHAGOUR",
            "homepage": "http://dev.glicer.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "glicer/simply-html": "~1.0",
        "symfony/finder": "~2.3 || ~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "GlLazyLoadImg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GlLazyLoadImg\\Tests\\": "tests/"
        }
    }
